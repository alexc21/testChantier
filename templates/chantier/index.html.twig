{% extends 'base.html.twig' %}
{% block head %}

{% block title %}chantier{% endblock %}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
{% endblock %}

{% block body %}
<div class="container">
<div>
    <h1>test chantier</h1>
    <ul>
        <li><a href="/user">utilisateur</a></li>
        <li><a href="/pointage">Pointage</a></li>
    </ul>
</div>
    <h2>page de chantier</h2>
</div>

<table>
    <thead>
        <tr>
            <th>nom</th>
            <th>adresse </th>
            <th>dateDeDebut</th>
        </tr>
    </thead>
    <tbody>
    {% for chantier in properties %}
        <tr>
            <td>{{chantier.nom}}</td> 
            <td>{{chantier.adresse}}</td>
             <td>{{chantier.DateDeDebut|date('Y-m-d')}}</td>
            <td>
                <a href='{{path('chantier.edit', {id: chantier.id})}}' class=" btn btn-primary">editer</a>
                <form method="post" action="{{ path('chantier.delete', {id: chantier.id}) }}" style="display: inline-block">
                    <input type="hidden" name="_method" value="DELETE"/>
                    <button class="btn btn-danger">supprimer</button>
                </form>
            </td>
        
           <td>
        </tr>
    {% endfor %}
    </tbody>
</table>
<div>
     <a href="{{path('chantier.create')}}" class=" btn btn-primary">creer</a>
</div>

<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.10.2/dist/umd/popper.min.js" integrity="sha384-7+zCNj/IqJ95wo16oMtfsKbZ9ccEh31eOz1HGyDuCQ6wgnyJNSYdrPa03rtR1zdB" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js" integrity="sha384-QJHtvGhmr9XOIpI6YVutG+2QOK9T+ZnN4kzFN1RtK3zEFEIsxhlmWl5/YESvpZ13" crossorigin="anonymous"></script>
{% endblock %}